@model PolarisFamily.Models.Video

@{
    ViewData["Title"] = "添加";
}
<div class="container">
    <h2>添加视频</h2>

    <form id="form1" class="form-horizontal" role="form" asp-action="Create">
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label for="firstname" class="col-sm-2 control-label">视频名称</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.VideoName" class="form-control"  placeholder="视频名称">
                <span asp-validation-for="@Model.VideoName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">视频描述</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Description" type="text" class="form-control" placeholder="请输入视频描述">
                <span asp-validation-for="@Model.Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">视频地址</label>
            <div class="col-sm-10">
                <input asp-for="@Model.VideoRelativeUrl" type="text" class="form-control" placeholder="请输入视频地址">
                <span asp-validation-for="@Model.VideoRelativeUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label"></label>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="submit" class="btn btn-default btn-primary" value="确定上传" />
        </div>
    </form>
</div>
<script type="text/javascript">
    function alert(){
        var mes=confirm("您确定要**吗？");
        if(@ViewBag.Count==1)
            alert ("上传成功");
        else
            alert("上传失败")
    }
</script>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
