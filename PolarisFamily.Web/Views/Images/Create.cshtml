@model PolarisFamily.Models.Image

@{
    ViewData["Title"] = "添加";
}
<div class="container">
    <h2>添加图片</h2>

    <form id="form1" class="form-horizontal" role="form"  asp-action="Create">
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label for="firstname" class="col-sm-2 control-label">图片名称</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.ImageName" class="form-control" placeholder="图片名称">
                <span asp-validation-for="@Model.ImageName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">图片描述</label>
            <div class="col-sm-10">
                <input asp-for="@Model.Description" type="text" class="form-control" placeholder="请输入新闻描述">
                <span asp-validation-for="@Model.Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">图片地址</label>
            <div class="col-sm-10">
                <input asp-for="@Model.RelativeUrl" type="text" class="form-control" placeholder="请输入视频地址">
                <span asp-validation-for="@Model.RelativeUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label"></label>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="submit" class="btn btn-default btn-primary" value="确定上传" />
        </div>
    </form>
</div>
<script type="text/javascript">
</script>