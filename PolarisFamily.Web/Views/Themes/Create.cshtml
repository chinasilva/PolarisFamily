@model PolarisFamily.Models.Theme

@{
    ViewData["Title"] = "添加";
}
<div class="container">
    <h2>添加栏目</h2>

    <form id="form1" class="form-horizontal" role="form" asp-action="Create">
        <div class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label for="firstname" class="col-sm-2 control-label">栏目名称</label>
            <div class="col-sm-10">
                <input type="text" asp-for="ThemeName" class="form-control"  placeholder="栏目名称">
                <span asp-validation-for="ThemeName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">栏目描述</label>
            <div class="col-sm-10">
                <input asp-for="Description" type="text" class="form-control" placeholder="请输入栏目描述">
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">栏目描述</label>
            <div class="col-sm-10">
                <input asp-for="RelativeUrl" type="text" class="form-control" placeholder="请输入栏目图标网址">
                <span asp-validation-for="RelativeUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label"></label>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <input type="submit" class="btn btn-default btn-primary" value="确定上传" />
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
